
<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.aqar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Aqar</name>
    <description>Real Estate Application</description>
    <author email="dev@example.com" href="https://example.com">
        Aqar Development Team
    </author>
    <content src="splash-screen.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <!-- Removed all splash screen references -->
    </platform>
    <platform name="ios">
        <!-- Removed all splash screen references -->
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarOverlaysWebView" value="true" />
</widget>